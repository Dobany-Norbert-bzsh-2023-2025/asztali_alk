<Window x:Class="WpfCrud.WindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCrud"
        mc:Ignorable="d"
        Title="WindowAdd" 
        Height="450" 
        Width="800" 
        AllowsTransparency="True" 
        WindowStyle="none" 
        Background="Transparent"
        MouseDown="Window_MouseDown">


    <Border Background="PeachPuff" CornerRadius="200,0,200,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Munkatársak felvétele" 
                       FontSize="38"
                       TextAlignment="Center"
                       Grid.ColumnSpan="2"
                       Padding="70,20,0,20">
            </TextBlock>
            <TextBlock Text="x" FontSize="30" 
                       HorizontalAlignment="Right"
                       TextAlignment="center"
                       Grid.Column="2"
                       Padding="10,0"
                       PreviewMouseDown="TextBlock_PreviewMouseDown">
            </TextBlock>

            <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="Name"
                           FontSize="24"
                           Margin="0,0,20,0">
                </TextBlock>
                <TextBlock Text="Age"
                           FontSize="24"
                           Margin="0,0,20,0">
                </TextBlock>
            </StackPanel>

            <StackPanel x:Name="spInput" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBox Text="{Binding Name}"
                         FontSize="24"
                         Margin="10"
                         Padding="0,10"
                         Background="LightGray">
                </TextBox>
                <TextBox Text="{Binding Age}"
                         FontSize="24"
                         Margin="10"
                         Padding="0,10"
                         Background="LightGray">
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,313,317,0" Grid.RowSpan="2">
                <Button Content="Save" 
                        Grid.Row="2" 
                        Margin="5" 
                        FontSize="24"
                        Width="150"
                        Click="viewClick">
                </Button>
                <Button Content="Close" 
                        Grid.Row="2" 
                        Margin="5" 
                        FontSize="24"
                        Width="150"
                        PreviewMouseDown="TextBlock_PreviewMouseDown">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
