<Window x:Class="Rajzolo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rajzolo"
        mc:Ignorable="d"
        Title="Rajzoló" Height="450" Width="800">
    <Grid>
        <Button Content="Négyszög" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="VeletlenNegyszog" Width="60" Height="20"/>
        <Canvas x:Name="Rajzlap" HorizontalAlignment="Center" Height="390" Margin="0,35,0,0" VerticalAlignment="Top" Width="780" Background="Black" MouseDown="Indit" MouseUp="Leallit" MouseMove="Rajzolas"/>
        <Button Content="Törlés" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Click="Torles" Width="60" Height="20"/>
        <Button Content="Csúcsok" HorizontalAlignment="Left" Margin="149,10,0,0" VerticalAlignment="Top" Click="VeletlenCsucsok" Width="60" Height="20"/>
    </Grid>
</Window>
